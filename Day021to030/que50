#include <stdio.h>

int main() {
    int i, j, k;
    int n = 5; // Number of rows

    for(i = n; i >= 1; i--) {        // Loop for rows
        // Print leading spaces
        for(j = 0; j < n - i; j++) {
            printf(" ");
        }
        // Print stars
        for(k = 1; k <= i; k++) {
            printf("*");
        }
        printf("\n"); // Move to next line after each row
    }

    return 0;
}
